{
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": ".",
    "module": "commonjs",
    "outDir": "./build",
    "paths": {
      "~components/*": ["./src/components/*"],
      "~database/*": ["./src/database/*"],
      "~graphql/*": ["./src/graphql/*"],
      "~lib/*": ["./src/lib/*"]
    },
    "rootDir": "./src",
    "strict": true,
    "target": "es2022"
  }
}
